{
  "name": "@thundra/foresight-cli-root",
  "private": true,
  "version": "1.0.0",
  "devDependencies": {
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.1"
  },
  "scripts": {
    "test": "lerna exec npm run test",
    "postinstall": "lerna bootstrap --hoist --ignore-scripts",
    "clean:all": "lerna run --parallel clean",
    "build:all": "lerna exec npm run build",
    "clean-build:all": "npm-run-all -p clean:all -s build:all",
    "prerelease": "lerna version ${RELEASE_SCALE} -m \"chore(release): publish %s\" --no-push --exact --yes && npm run clean-build:all",
    "release": "lerna publish from-package --ignore-scripts --no-verify-access --yes",
    "postrelease": "git push --follow-tags origin"
  },
  "workspaces": {
    "packages": [
      "packages/**",
      "commons/**"
    ]
  },
  "author": "Thundra",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thundra-io/thundra-foresight-cli.git"
  },
  "bugs": {
    "url": "https://github.com/thundra-io/thundra-foresight-cli/issues"
  },
  "homepage": "https://github.com/thundra-io/thundra-foresight-cli#README.md"
}
