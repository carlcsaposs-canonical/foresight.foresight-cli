{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "ES2018",
        "rootDir": "src",
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "strictNullChecks": false,
        "sourceMap": true,
        "composite": true,
        "baseUrl": "./",
        "paths": {
          "@thundra/foresight-cli-logger": ["@thundra/foresight-cli-logger"],
          "@thundra/foresight-cli-test-uploader": ["@thundra/foresight-cli-test-uploader"]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        { "path": "../cli-test-uploader" },
        { "path": "../cli-logger" }
    ]
}